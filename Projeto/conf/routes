# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Tema Page
GET		/tema/:id					controllers.Application.getPaginaTema(id : Long)
GET		/tema/:id/:v				controllers.Application.votar(id : Long, v : Integer)
POST    /dica/:id                   controllers.Application.adicionarDica(id : Long)

# Login
GET     /login                      controllers.Login.show()
POST    /login                      controllers.Login.authenticate()
GET		/logout						controllers.Login.logout()
POST    /signUp                     controllers.Login.signUp()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
